
[Unit]
Description=Nomad agent
Documentation=https://nomadproject.io/docs/
After=network-online.target
Wants=network-online.target

[Service]
User={{ nomad_user }}
Group={{ nomad_group }}
ExecStart=/usr/local/bin/nomad agent -config={{ nomad_config_dir }} -dev
KillMode=process
KillSignal=SIGINT
Restart=on-failure

[Install]
WantedBy=multi-user.target
